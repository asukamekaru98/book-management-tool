<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/isbn_code_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="end|bottom"
            android:layout_toStartOf="@+id/camera_button"
            android:ems="13"

            android:maxLength="13"
            android:textSize="40sp"
            android:text="9781234567890"
            android:hint="@string/set_isbn_code"
            android:importantForAutofill="no"
            android:inputType="number" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="12dp"
            android:importantForAccessibility="no"
            android:layout_alignBottom="@id/isbn_code_edit_text"
            android:layout_alignParentEnd="true"
            android:src="@drawable/camera_24" />
    </RelativeLayout>

</merge>